@page "/counter"

<PageTitle>Contador</PageTitle>

<h1>Counter</h1>

<p role="status">Contador Actual: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Tocame</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
